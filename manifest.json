{
  "manifest_version": 2,

  "name": "Timer",
  "description": "Simple timer in browser",
  "version": "1.0",

  "browser_action": {
    "default_icon": "timer.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["popup.js", "background.js"],
    "persistent": false
  }

}
